<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Secret Messages</title>
    <link rel="stylesheet" href="/view_messages.css" />
  </head>
  <body>
    <!-- Navbar -->
    <header>
      <nav>
        <div class="navbar">
          <a href="/" class="logo">SecretLink</a>
          <ul class="nav-links">
            <li><a href="/">Home</a></li>
            <li><a href="/view">View Messages</a></li>
          </ul>
        </div>
      </nav>
    </header>

    <!-- Main Content -->
    <div class="container">
      <h1>View Secret Messages</h1>

      <!-- Error Message -->
      <% if (typeof error !== 'undefined' && error !== null) { %>
      <div class="error">
        <p><%= error %></p>
      </div>
      <% } %>

      <!-- Login Form -->
      <form action="/view" method="POST">
        <input
          type="text"
          name="secretId"
          placeholder="Enter Secret ID"
          required
        />
        <input
          type="password"
          name="password"
          placeholder="Enter Password"
          required
        />
        <button type="submit">View Messages</button>
      </form>

      <!-- Messages Area -->
      <% if (typeof messages !== 'undefined' && messages !== null) { %> <% if
      (messages.length === 0) { %>
      <div class="message-card">
        <p>No messages to see.</p>
      </div>
      <% } else { %>
      <div class="messages">
        <% messages.forEach(function(message) { %>
        <div class="message-card">
          <p><%= message.content %></p>
        </div>
        <% }) %>
      </div>

      <!-- Action Buttons -->
      <div class="actions">
        <form action="/clear" method="POST">
          <input
            type="hidden"
            name="secretId"
            value="<%= messages[0].secretId %>"
          />
          <button class="clear-btn" type="submit">Clear Messages</button>
        </form>
        <a href="/" class="logout-btn">Log Out</a>
      </div>
      <% } %> <% } %>
    </div>

    <!-- Footer -->
    <footer>
      <p>&copy; 2025 SecretLink. All rights reserved.</p>
    </footer>
  </body>
</html>
